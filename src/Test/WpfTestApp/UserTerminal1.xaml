<UserControl x:Class="WpfApp4.UserTerminal1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp4"
             xmlns:terminal1="clr-namespace:Terminal1;assembly=WpfCustomControlLibrary1"
             xmlns:powerShellShared="clr-namespace:PowerShellShared;assembly=WpfCustomControlLibrary1"
             xmlns:terminal11="clr-namespace:Terminal1;assembly=WpfTerminalControlLib"
             xmlns:powerShellShared1="clr-namespace:PowerShellShared;assembly=WpfTerminalControlLib"
             xmlns:wpfTerminalControlLib="clr-namespace:WpfTerminalControlLib;assembly=WpfTerminalControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
  <wpfTerminalControlLib:WpfTerminalControl AutoResize="True" x:Name="Terminal" CursorBrush="LawnGreen"/>
  <wpfTerminalControlLib:WrappedPowerShell x:Name="Shell" Terminal="{x:Reference Terminal}"/>
  </Grid>
         

</UserControl>
